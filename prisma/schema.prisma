// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id               String            @id @default(uuid())
  name             String
  email            String
  password         String
  role             Role              @default(CUSTOMER)
  contactNo        String
  address          String
  profileImg       String
  reviewAndRatings ReviewAndRating[]
  orders           Order[]
  orderedBooks     OrderedBooks[]

  @@map("user")
}

model Category {
  id    String @id @default(uuid())
  name  String
  books Book[]

  @@map("category")
}

model Book {
  id              String         @id @default(uuid())
  title           String
  author          String
  price           String
  genre           String
  publicationDate String
  categoryId      String
  category        Category       @relation(fields: [categoryId], references: [id])
  orderedBooks    OrderedBooks[]

  @@map("book")
}

model ReviewAndRating {
  id     String @id @default(uuid())
  review String
  rating String
  userId String
  user   User   @relation(fields: [userId], references: [id])
  bookId String

  @@map("review_and_rating")
}

model Order {
  id           String @id @default(uuid())
  userId       String
  user         User   @relation(fields: [userId], references: [id])
  orderedBooks String
  status       String
  createdAt    String

  @@map("order")
}

model OrderedBooks {
  id       String @id @default(uuid())
  userId   String
  user     User   @relation(fields: [userId], references: [id])
  bookId   String
  books    Book   @relation(fields: [bookId], references: [id])
  quantity String

  @@map("ordered_books")
}

enum Role {
  ADMIN
  CUSTOMER
}
